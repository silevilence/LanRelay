@code {
    [Inject]
    private ChatState ChatState { get; set; } = default!;

    [Inject]
    private TransferState TransferState { get; set; } = default!;

    [Parameter]
    public DeviceInfo? SelectedDevice { get; set; }

    [Parameter]
    public bool IsConnected { get; set; }

    [Parameter]
    public EventCallback<string> OnSendMessage { get; set; }

    [Parameter]
    public EventCallback<Guid> OnAcceptTransfer { get; set; }

    [Parameter]
    public EventCallback<Guid> OnRejectTransfer { get; set; }

    private IReadOnlyList<ChatMessage> messages = [];
    private IReadOnlyList<TransferInfo> transfers = [];
    private ElementReference messagesContainer;

    protected override void OnInitialized()
    {
        ChatState.OnChatHistoryChanged += HandleChatHistoryChanged;
        TransferState.OnTransferAdded += HandleTransferChanged;
        TransferState.OnTransferProgressChanged += HandleProgressChanged;
        TransferState.OnTransferStatusChanged += HandleStatusChanged;
        TransferState.OnTransferRemoved += HandleTransferRemoved;
        RefreshMessages();
        RefreshTransfers();
    }

    protected override void OnParametersSet()
    {
        RefreshMessages();
        RefreshTransfers();
    }

    private void RefreshMessages()
    {
        if (SelectedDevice is not null)
        {
            messages = ChatState.GetChatHistory(SelectedDevice.DeviceId);
        }
        else
        {
            messages = [];
        }
    }

    private void RefreshTransfers()
    {
        if (SelectedDevice is not null)
        {
            transfers = TransferState.GetTransfersForDevice(SelectedDevice.DeviceId);
        }
        else
        {
            transfers = [];
        }
    }

    private void HandleChatHistoryChanged()
    {
        RefreshMessages();
        InvokeAsync(StateHasChanged);
    }

    private void HandleTransferChanged(TransferInfo info)
    {
        if (info.RemoteDeviceId == SelectedDevice?.DeviceId)
        {
            RefreshTransfers();
            InvokeAsync(StateHasChanged);
        }
    }

    private void HandleProgressChanged(Guid transferId, double progress)
    {
        InvokeAsync(StateHasChanged);
    }

    private void HandleStatusChanged(Guid transferId, TransferStatus status)
    {
        InvokeAsync(StateHasChanged);
    }

    private void HandleTransferRemoved(Guid transferId)
    {
        RefreshTransfers();
        InvokeAsync(StateHasChanged);
    }

    private async Task HandleAcceptTransfer(Guid transferId)
    {
        await OnAcceptTransfer.InvokeAsync(transferId);
    }

    private async Task HandleRejectTransfer(Guid transferId)
    {
        await OnRejectTransfer.InvokeAsync(transferId);
    }

    private async Task HandleSendMessage(string text)
    {
        if (SelectedDevice is null || string.IsNullOrWhiteSpace(text))
            return;

        // Add to local state immediately for responsiveness
        var message = new ChatMessage
        {
            Id = Guid.NewGuid(),
            DeviceId = SelectedDevice.DeviceId,
            Content = text,
            Timestamp = DateTime.UtcNow,
            IsOutgoing = true,
            SenderName = "æˆ‘"
        };

        ChatState.AddMessage(SelectedDevice.DeviceId, message);

        // Notify parent to actually send via TCP
        await OnSendMessage.InvokeAsync(text);
    }

    public void Dispose()
    {
        ChatState.OnChatHistoryChanged -= HandleChatHistoryChanged;
        TransferState.OnTransferAdded -= HandleTransferChanged;
        TransferState.OnTransferProgressChanged -= HandleProgressChanged;
        TransferState.OnTransferStatusChanged -= HandleStatusChanged;
        TransferState.OnTransferRemoved -= HandleTransferRemoved;
    }
}
